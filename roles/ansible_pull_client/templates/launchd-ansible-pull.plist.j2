<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>no.localfarm.ansible-pull</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{ ansible_pull_script }}</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StartInterval</key>
    <integer>{{ ansible_pull_interval * 60 }}</integer>

    <key>StandardOutPath</key>
    <string>{{ ansible_pull_logfile }}</string>

    <key>StandardErrorPath</key>
    <string>{{ ansible_pull_logfile }}</string>

    <key>KeepAlive</key>
    <false/>
</dict>
</plist>
